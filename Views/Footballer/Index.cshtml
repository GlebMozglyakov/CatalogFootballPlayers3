@model IEnumerable<Footballer>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Список футболистов</h2>
		</div>

	</div>

	<br></br>

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<theard>
				<tr>
					<th>
						Имя
					</th>
					<th>
						Фамилия
					</th>
					<th>
						Пол
					</th>
					<th>
						Дата рождения
					</th>
					<th>
						Название команды
					</th>
					<th>
						Страна
					</th>
				</tr>
			</theard>
			<tbody>
				@foreach(var obj in Model)
				{
					<tr>
						<td width="16%">@obj.Name</td>
						<td width="16%">@obj.Surname</td>
						<td width="16%">@obj.Gender</td>
						<td width="16%">@obj.Birthday</td>
						<td width="16%">@obj.TeamName</td>
						<td width="16%">@obj.Country</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Список пуст</p>
	}
</div>
